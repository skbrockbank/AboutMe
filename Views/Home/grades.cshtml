@{
    ViewBag.Title = "Calculate Your Grade";
}

@model GradesModel

<body>

    <h2>Grade Calculator</h2>
    <form method="post">
        <label>Assignments:</label>
        <input id="assignments" asp-for="assignments" />
        <br />
        <label>Group Project:</label>
        <input id="groupProject" asp-for="groupProject" />
        <br />
        <label>Quizzes:</label>
        <input id="quizzes" asp-for="quizzes" />
        <br />
        <label>Exams:</label>
        <input id="exams" asp-for="exams" />
        <br />
        <label>INTEX:</label>
        <input id="intex" asp-for="intex" />
        <br />
        <br />
        <input type="submit" value="Calculate" id="submitButton" />
        <div asp-validation-summary="All"></div>
    </form>

</body>